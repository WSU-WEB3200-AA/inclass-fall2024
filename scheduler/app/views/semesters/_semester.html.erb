<%= turbo_frame_tag semester do%>
  <div class="d-flex">
    <span class="flex-grow-1"><%= semester.name %></span>
    <%= link_to "Edit", edit_semester_path(semester), class: "btn btn-primary" %>
    <%= link_to "Delete", semester, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "btn btn-danger"
    %>
  </div>
<% end %>